<div class="container">
    <h2>Add new good</h2>
    <hr>
    <form method="post" enctype="multipart/form-data">
        <p class="text-title">Title</p>
        <input name="title" class="text-input" type="text" required="required">
        <p class="text-title">Description</p>
        <textarea name="description" class="text-input" required="required"></textarea>
        <p class="text-title">Price</p>
        <input name="price" class="text-input" type="number" step="0.01" required="required">
        <p class="text-title">Photo</p>
        <input name="photo" class="text-input" type="file" accept="image/jpeg,image/png">
        <br>
        <button name="add-new-good" class="btn btn-red btn-big" type="submit"><span class="fa fa-plus"></span> Add</button>
    </form>
</div>