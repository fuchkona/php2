<div class="container">
    <br>
    <a class="btn btn-red" href="/admin/add-good"><span class="fa fa-plus"></span> Add new good</a>
    {% if goods %}
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for good in goods %}
                <tr>
                    <td>{{ good.title }}</td>
                    <td>{{ good.description }}</td>
                    <td>{{ good.price }}</td>
                    <td>
                        <a href="/admin/edit-good/id/{{ good.id }}"><span class="fa fa-edit"></span></a>
                        <a class="btn-red" href="#" data-id="{{ good.id }}"><span class="fa fa-times"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>Here will be goods</h2>
    {% endif %}
</div>